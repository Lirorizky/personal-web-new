            {{#each project}}
            <div class="card shadow rounded-4 m-5" style="width: 20rem">
              <a
                href="/project-detail/{{this.id}}"
                class="text-decoration-none text-dark"
              >
                <img
                  src="../assets/images/{{this.image}}"
                  class="card-img-top rounded-top"
